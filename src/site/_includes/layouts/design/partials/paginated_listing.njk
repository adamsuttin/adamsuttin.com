{% if pagination.pages.length > 1 %}
{% include "layouts/partials/pagination.njk" %}{% endif %}
<div class="cards">
{% for post in pagination.items %}
  <article>
    <header>
      <h4><a href="{{ post.url | url }}">{{ post.data.title }}</a></h4>
      {% if post.data.subtitle %}<h5>{{ post.data.subtitle }}</h5>{% endif %}
      <p class="date">{{ post.date | usDateShort }}</p>
    </header>
    {% if post.data.summary %}
    <p>{{ post.data.summary | safe }}</p>
    {% endif %}
    {% if post.data.tags %}
    <nav class="tags">
    {% for tag in post.data.tags %}
      <a href="/design/tags/{{ tag }}/">{{ tag }}</a>{% endfor %}
    </nav>{% endif %}
  </article>
{% endfor %}
</div>
{% if pagination.pages.length > 1 %}
